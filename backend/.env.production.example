DATABASE_URL=postgresql+psycopg2://smartpark:change-me@postgres:5432/smartpark
DATABASE_ECHO=False

LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/smartpark/backend/backend.log
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
MONITORING_HISTORY_SIZE=300
MONITORING_ERROR_RATE_THRESHOLD=0.1
MONITORING_LATENCY_MS_THRESHOLD=500
MONITORING_LOW_AVAILABILITY_THRESHOLD=5

API_KEY_HEADER=X-API-Key
API_KEYS=change-me-api-key
API_RATE_LIMIT=2000
API_RATE_LIMIT_WINDOW_SECONDS=60

CORS_ALLOW_ORIGINS=https://your-frontend-domain.com
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*
